{
    "compilerOptions": {
        "target": "ES2022",
        "outDir": "./dist",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "module": "ES2022",
        "baseUrl": ".",
        "paths": {
            "@/*": [
              "*"
            ]
          },
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "strict": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true
    }
}